<div id="podcast_show">
  <div id="show_banner">
    <div class="wrapper_skinny">
      <h1><%= @podcast.title %></h1>
      <p class="description"><%= @podcast.description %></p>
      <% unless @podcast.itunes.blank? %>
        <a href="<%= @podcast.itunes %>" class="subcribe_link">iTunes</a>
      <% end %>

      <% unless @podcast.stitcher.blank? %>
       <a href="<%= @podcast.stitcher %>" class="subcribe_link">Stitcher</a>
      <% end %>

      <% unless @podcast.podbay.blank? %>
       <a href="<%= @podcast.podbay %>" class="subcribe_link">PodBay</a>
      <% end %>

    </div>
  </div>
  <div id="breadcrumb">
    <%= link_to podcasts_path do %>
      All Podcasts
      <span>/</span>
      <%= link_to @podcast.title, podcast_path(@podcast) %>
      <span>/</span>
      <%= @episode.title %>
    <% end %>
  </div>


  <div id="episode_content">
    <div class="wrapper_skinny">
      <%= image_tag @episode.episode_thumbnail.url(:medium), class: "current_episode_thumbnail" %>
      <h2><%= @episode.title %></h2>
      <p class="description"><%= @episode.description %></p>  
    </div>
  </div>

  <div id="episodes">
    <div class="wrapper_skinny">
      <ul class="cf">
        <% @episodes.each do |episode| %>
          <li class="cf">
            <div class="episode_thumbnail">
              <a href=episode.html">
                <%= image_tag episode.episode_thumbnail.url(:medium) %>
              </a>
            </div>
            <div class="episode_overview">
              <div class="episode_overview">
                <h2><%= link_to episode.title, podcast_episode_path(@podcast, episode) %></h2>
                <p class="description"><%= truncate(episode.description, length: 160) %></p>
              </div>
            </div>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>

<div class="pagination">
  <span class="previous_page disabled">Pervious</span>
  <em class="current">1</em>
  <a href="#">2</a>
  <a class="next page" href="#">Next</a>
</div>
