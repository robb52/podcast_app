<div id="banner" class="podcast_banner">
  <h1>Find your new favorite podcast</h1>
</div>

<div id="podcast" class="cf">
  <div class="wrapper">
    <ul class="cf">
      <% @podcasts.each do |podcast| %>
        <%= link_to podcast do %>
          <li>
            <%= image_tag podcast.thumbnail.url(:medium) %>
            <div class="podcast_overview">
              <h2><%= podcast.title %></h2>
              <p class="episode_count">1 Episode</p>
            </div>
          </li>
        <% end %>
      <% end %>
    </ul>

    <%= will_paginate @podcasts, previous_label: "Previous", next_label: "Next" %>

  </div>
</div>

